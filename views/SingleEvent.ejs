<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./components/Header') %>
    <title>UI Visuals | <%= data.name %></title>
  </head>
  <body>
    <div
      class="w-[100%] py-[20px] px-[10%] z-[4] duration-500 sticky top-0 flex flex-col md:flex-row justify-between gap-[20px] items-center bg-nav-main flex flex-row"
    >
      <!-- Div nav-img contain heading nav images  -->
      <div class="flex flex-row gap-[20px] items-center">
        <img src="/image/DEV_BLACK.png" class="w-[80px] object-contain" />
        <div class="w-[1px] h-[35px] bg-text-main"></div>
        <img src="/image/UI_BLACK.png" class="w-[55px] object-contain" />
      </div>
      <!-- Div nav-items contain links for scroll navigation -->
      <div class="flex flex-row md:gap-[50px] gap-[20px] items-center">
        <a href="/"><h4>Home</h4></a>
        <a href="/"><h4>About</h4></a>
        <a href="/"><h4>Events</h4></a>
        <a href="/"><h4>Team</h4></a>
        <a href="/"><h4>Contact</h4></a>
      </div>
    </div>
    <div class="flex flex-col items-center gap-[20px]">
      <div class="w-[100%] h-[450px] px-[5%] py-[30px] bg-[url(<%= data.headerImage %>)] bg-gradient-to-b from-primary-main via-transparent to-primary-mid bg-cover bg-center bg-no-repeat flex flex-col justify-end">
        <h2 class="font-sb text-xl text-text-main"><%= data.name %></h2>
        <span>
          <div class="flex-row" style="align-items: center; gap: 5px"> 
            <i class="uil uil-map-marker"></i>
            <p><%= data.location %></p>
          </div>
        </span>
        <span>
          <div class="flex-row" style="align-items: center; gap: 5px">
            <i class="uil uil-calendar"></i>
            <p><%= data.date %></p>
          </div>
        </span>
      </div>
      <!-- <img src="<%= data.headerImage %>" class="mt-[10px] w-[100%] h-[400px] object-cover" /> -->
      <div class="flex-col event-content">
        <p><%= data.description[0] %></p>
        <div class="flex-row event-image-gallery">
          <% for (var i = 0; i < data.images.length; i++) { %>
          <img src="<%= data.images[i] %>" />
          <% } %>
        </div>
        <% for (var i = 1; i < data.description.length; i++) { %>
        <p><%= data.description[i] %></p>
        <% } %> <% if (data.youtubeCode) { %>
        <iframe
          src="https://www.youtube.com/embed/<%= data.youtubeCode %>"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          allowfullscreen
        ></iframe>
        <% } %>
      </div>
    </div>
  </body>
</html>
