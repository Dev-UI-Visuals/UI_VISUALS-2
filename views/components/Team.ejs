<div
  class="bg-gradient-to-b from-primary-main to-primary-mid px-[50px] py-[50px] flex flex-col items-center gap-[30px]"
  id="team"
>
  <h1
    class="font-b text-center text-[90px] text-secondary-main leading-[75%] tracking-[-2px] truncate"
  >
    Meet Our<br /><span id="team-fade" class="block">Team</span>
  </h1>
  <div
    class="w-[50%] mx-[auto] my-[40px] flex flex-row items-center justify-between"
  >
    <div class="flex flex-col items-center gap-[5px]">
      <img
        src="/image/team/Dipesh_Shrestha.png"
        class="h-[180px] aspect-square object-cover"
      />
      <h3 class="font-r text-text-main text-sm leading-[120%]">
        Mr. Dipesh Shrestha
      </h3>
      <h4 class="font-r text-text-light text-xs leading-[120%]">
        DevCorps Head
      </h4>
      <div class="flex flex-row gap-[10px] items-center">
        <a
          href="https://www.linkedin.com/in/dipeshshrestha1221/"
          target="_blank"
          ><i class="uil uil-linkedin text-[24px] text-text-main"></i
        ></a>
        <a href="mailto:dipesh.shrestha@heraldcollege.edu.np" target="_blank">
          <i class="uil uil-envelope text-[24px] text-text-main"></i
        ></a>
        <a href="https://www.instagram.com/username__dipesh.sh/" target="_blank"
          ><i class="uil uil-instagram text-[24px] text-text-main"></i
        ></a>
      </div>
    </div>
    <div class="flex flex-col items-center gap-[5px]">
      <img
        src="https://lh3.googleusercontent.com/a-/AD_cMMQFqvkX9XAQlcmqa8Df0XOcz2pjg4ncwgrf08hSys0D6Q=s250"
        class="h-[180px] aspect-square object-cover"
      />
      <h3 class="font-r text-text-main text-sm leading-[120%]">
        Mr. Abhisek Sitaula
      </h3>
      <h4 class="font-r text-text-light text-xs leading-[120%]">
        Community Mentor
      </h4>
      <div class="flex flex-row gap-[10px] items-center">
        <a
          href="https://www.linkedin.com/in/sujata-thapa-625397169/"
          target="_blank"
          ><i class="uil uil-linkedin text-[24px] text-text-main"></i
        ></a>
        <a href="mailto:sujata.thapa@heraldcollege.edu.np" target="_blank">
          <i class="uil uil-envelope text-[24px] text-text-main"></i
        ></a>
        <a href="https://www.instagram.com/sujata3t1/" target="_blank"
          ><i class="uil uil-instagram text-[24px] text-text-main"></i
        ></a>
      </div>
    </div>
  </div>
  <h2 class="text-xxxl text-text-mid font-sb tracking-[-2px]">
    Our Steering Leaders
  </h2>
  <div
    class="w-[60%] mx-auto flex flex-row flex-wrap gap-[50px] justify-center"
  >
    <% for (var i = 0; i < data.leaders.length; i++ ) { %>
    <div class="w-[180px] flex flex-col gap-[5px] items-center">
      <img
        src="<%= data.leaders[i].img %>"
        class="w-[100%] aspect-square object-cover"
      />
      <h3 class="font-r text-text-main text-xs leading-[120%]">
        <%= data.leaders[i].name %>
      </h3>
      <h4 class="font-r text-text-light text-xxs leading-[120%]">
        Steering Leader
      </h4>
      <div class="flex flex-row gap-[10px] items-center">
        <a href="<%= data.leaders[i].linkedInLink %>" target="_blank"
          ><i class="uil uil-linkedin text-[24px] text-text-main"></i
        ></a>
        <a href="<%= data.leaders[i].mailLink %>" target="_blank">
          <i class="uil uil-envelope text-[24px] text-text-main"></i
        ></a>
        <a href="<%= data.leaders[i].instagramLink %>" target="_blank"
          ><i class="uil uil-instagram text-[24px] text-text-main"></i
        ></a>
      </div>
    </div>
    <% } %>
  </div>
  <h2 class="text-xxxl text-text-mid font-sb tracking-[-2px]">
    Department Heads
  </h2>
  <div
    class="w-[70%] mx-auto flex flex-row flex-wrap gap-[50px] justify-center"
  >
    <% for (var i = 0; i < data.heads.length; i++ ) { %>
    <div class="w-[180px] flex flex-col gap-[5px] items-center">
      <img
        src="<%= data.heads[i].img %>"
        class="w-[100%] aspect-square object-cover"
      />
      <h3 class="font-r text-text-main text-xs leading-[120%]">
        <%= data.heads[i].name %>
      </h3>
      <h4 class="font-r text-text-light text-xxs leading-[120%]">
        <%= data.heads[i].department %>
      </h4>
      <div class="flex flex-row gap-[10px] items-center">
        <a href="<%= data.heads[i].linkedInLink %>" target="_blank"
          ><i class="uil uil-linkedin text-[24px] text-text-main"></i
        ></a>
        <a href="<%= data.heads[i].mailLink %>" target="_blank">
          <i class="uil uil-envelope text-[24px] text-text-main"></i
        ></a>
        <a href="<%= data.heads[i].instagramLink %>" target="_blank"
          ><i class="uil uil-instagram text-[24px] text-text-main"></i
        ></a>
      </div>
    </div>
    <% } %>
  </div>
  <h2 class="text-xxxl text-text-mid font-sb tracking-[-2px]">Members</h2>
  <div class="swiper member-swiper w-[70%]" id="member">
    <div class="swiper-wrapper ml-[-1%]">
      <% for (var i = 0; i < data.members.length; i++ ) { %>
      <div class="swiper-slide">
        <div class="bg-primary-mid w-[200px] h-[210px] flex flex-col items-center justify-between">
          <img src="<%= data.members[i].img %>" class="w-[180px] aspect-square object-cover"/>
          <h5 class="font-r text-xs text-text-main"><%= data.members[i].name %></h5>
        </div>
      </div>
      <% } %>
    </div>
    <div class="swiper-button-prev">
      <i class="uil uil-angle-left-b text-text-light bg-primary-main"></i>
    </div>
    <div class="swiper-button-next mr-[5px]">
      <i class="uil uil-angle-right-b text-text-light bg-primary-main"></i>
    </div>
  </div>
</div>
